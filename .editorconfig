# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# 4 space indentation
[*.{py,java,c,cpp,h,hpp}]
indent_style = space
indent_size = 4

# 2 space indentation
[*.{js,jsx,ts,tsx,json,yaml,yml,html,css,scss,xml}]
indent_style = space
indent_size = 2

# Tab indentation (Makefiles)
[Makefile]
indent_style = tab

# Shell scripts
[*.{sh,bash,zsh}]
indent_style = space
indent_size = 2

# Go files
[*.go]
indent_style = tab
indent_size = 4

# Rust files
[*.rs]
indent_style = space
indent_size = 4

# Markdown
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Docker
[Dockerfile*]
indent_style = space
indent_size = 2

# Docker Compose
[docker-compose*.yml]
indent_style = space
indent_size = 2

# Vim files
[*.vim]
indent_style = space
indent_size = 2

# Configuration files
[*.{cfg,conf,ini}]
indent_style = space
indent_size = 2

# SQL
[*.sql]
indent_style = space
indent_size = 2

# Terraform
[*.tf]
indent_style = space
indent_size = 2

# Git
[.gitconfig]
indent_style = tab
